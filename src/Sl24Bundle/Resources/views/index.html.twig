    <div class="row">
        {% block leftSideBar %}
            <div class="col-md-2 left-sitebar">
                <ul class="sidebar-menu">
                    <li>
                        <p class="text-center">
                            <img class="img-circle" width="60" src="{{ asset('bundles/sl24/img/friends/fr-01.jpg') }}" />
                        </p>

                        <h5 class="text-center">
                            {{ app.user.name ~ ' ' ~ app.user.surname }}
                        </h5>
                        <p align="center">
                            <i class="fa fa-pencil" style="font-size: 22px;"></i>
                            <i class="fa fa-book" style="font-size: 22px;"></i>
                            <i class="fa fa-diamond" style="font-size: 22px;"></i>
                            <i class="fa fa-clock-o" style="font-size: 22px;"></i>
                        </p>
                    </li>

                    <li>
                        <hr style="margin: 0;"/>
                    </li>

                    <li class="sub-menu">
                        <a href="/">
                            <i class="fa fa-desktop"></i>
                            Головна
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="/meetings">
                            <i class="fa fa-male"></i>
                            Зустрічі
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="/tasks">
                            <i class="fa fa-tasks"></i>
                            Завдання
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="/team">
                            <i class="fa fa-users"></i>
