<!DOCTYPE html>
<html lang="en" ng-app="Sl24">

<head itemscope itemtype="http://schema.org/Article">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta itemprop="name" content="">
    <meta itemprop="description" content="">
    <meta itemprop="image" content="">

    <meta prefix="og: http://ogp.me/ns#" property="og:site_name" content="" />
    <meta prefix="og: http://ogp.me/ns#" property="og:title" content="" />
    <meta prefix="og: http://ogp.me/ns#" property="og:type" content="article" />
    <meta prefix="og: http://ogp.me/ns#" property="og:description" content="" />
    <meta prefix="og: http://ogp.me/ns#" property="og:url" content="" />
    <meta prefix="og: http://ogp.me/ns#" property="og:image" content="" />

    <meta name="title" content="" />
    <meta name="description" content="{% block description %}{% endblock %}" />

    <title>{% block title %}{% endblock %}</title>

    {% block StyleSheets %}
        <link href="{{ asset('bundles/sl24/css/bootstrap.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/sl24/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/sl24/css/sitebar.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/sl24/css/main.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/sl24/css/footer.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/sl24/css/style.css') }}" rel="stylesheet" type="text/css">

        <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    {% endblock %}

    {% block base %}{% endblock %}
</head>

<body ng-controller="AppController">
    {% block page %}

        {% block body %}

        {% endblock %}

        {% block footer %}

            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <img src="{{ asset('bundles/sl24/img/logo.svg') }}" height="72px;" style="margin-top:-30px;">

                        </div>
                        <div class="col-md-4 pull-right" style="margin-right: -30px;">
                            <hr class="hrfooter">
                            <h4 style="color: #353535;">just up the stars!</h4>
                        </div>
                    </div>
                </div>
            </footer>

        {% endblock %}

    {% endblock %}

    {% block JavaScripts %}
        <script src="{{ asset('bundles/sl24/js/jQuery/jquery-2.1.3.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sl24/js/Bootstrap/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sl24/js/AngularJS/angular.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sl24/js/AngularJS/angular-route.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sl24/js/AngularJS/angular-sanitize.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sl24/js/AngularJS/angular-animate.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sl24/js/AngularJS/angular-messages.min.js') }}" type="text/javascript"></script>

        <script src="{{ asset('bundles/sl24/js/Custom/core.js') }}" type="text/javascript"></script>

        <script>

            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            });

            $('#task-view-tabs a').click(function (e) {
                if ($(this).id != $('a#add_new_task_btn').id) {
                    $(this).tab('show');
                }
                e.preventDefault();
            });

            URLS = {
                'asset': "{{ asset('') }}",
                'getTasks': "{{ path('sl_24_get_tasks') }}",
                'urlAddTask': "{{ path('sl_24_add_task') }}",
                'urlDeleteTask': "{{ path('sl_24_delete_task') }}"
            };
        </script>
        <script>

            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>

    {% endblock %}
</body>
</html>